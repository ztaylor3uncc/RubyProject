<link href="https://fonts.googleapis.com/css?family=Open+Sans|PT+Sans+Narrow" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="body-container"> 
    <div class="is-centered title">
        <h1 id="header1">Organizations</h1>
    </div>

    <div class="is-centered">
        <table id="OrgTable">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Contact</th>
                <th>Rating</th>
            </tr>
            <% @orgs.each do |org| %>
                <!-- do the math to find the rating -->
                <% a = 0 %>
                <% if org.ratings.present? %>
                    <% b = 0 %>
                <% else %>
                    <% b = 1 %>
                <% end %>
                <% org.ratings.each do |rate| %>
                    <% a += rate.rate.to_i %>
                    <% b += 1 %>
                <% end %>
                <tr>
                    <td><%= org.name %></td>
                    <td><%= org.description %></td>
                    <td><%= org.contact %></td>
                    <!-- Display the rating -->
                    <td><%= a/b %>
                    <!-- Reset the variables for the next org -->
                        <% a = 0 %>
                        <% b = 1 %></td>
                    
                    <td><%= link_to 'Show', org_path(org) %></td>
                    <td class="Edit"><%= link_to 'Edit', edit_org_path(org) %></td>
                    <td><%= link_to 'Destroy',
                                    org_path(org),
                                    method: :delete,
                                    data: { confirm: 'Are you sure?' } %></td>
                </tr>
            <% end %>
        </table>
    </div>
    <br>
    <table>
        <div class="is-centered">
            <%= link_to 'Add Organization', new_org_path %>
        </div>
    </table>
    
    <footer>
        
        <div class="foot-container">
            <p>RUBY WARRIORS Copyright Â© 2018. UNC CHARLOTTE</p>
        </div>
    </footer>
</div>


<p>
    <strong>Name:</strong>
    <%= @org.name %>
</p>

<p>
    <strong>Description:</strong>
    <%= @org.description %>
</p>

<p>
    <strong>Contact:</strong>
    <%= @org.contact %>
</p>

<h2>Comments:</h2>
<% @org.comments.each do |comment| %>
  <p>
      <strong>Anonymous:</strong>
      <%= comment.body %>
      <%= link_to 'Destroy', [comment.org, comment],
                            method: :delete,
                            data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

<h2>Add A Comment:</h2>
<%= form_for([@org, @org.comments.build]) do |f| %>
  <p>
      <%= f.label :body %>
      <%= f.text_field :body %>
  </p>
  
  <p>
      <%= f.submit %>
  </p>
  
<% end %>
<p>
    <%= link_to 'Back', orgs_path %>
</p>
